MROM=rom/sm1.sm1
SROM=rom/sfix.sfix
PROM=rom/sp-s2.sp1
ZROM=rom/000-lo.lo

BIOS=rom/neogeo.zip

all: $(BIOS)

-include ../Makefile.config

OBJS=biosstart
ELF=prom.elf

NULLSOUND=../nullsound
SOUND_DRIVER=$(NULLSOUND)/nullsound.ihx

VERSION=@PACKAGE_VERSION@

$(BIOS): $(PROM) $(ZROM) $(SROM) $(MROM)
	cd rom && /bin/echo -e "\
nullbios $(VERSION), an open source BIOS for Neo Geo\n\
https://github.com/dciabrin/ngdevkit\n\
." | @zip@ -qz neogeo.zip *.lo *.s*

$(MROM): $(SOUND_DRIVER) | rom
	$(NGSDOBJCOPY) -I ihex -O binary $< $@ --pad-to 131072

$(SROM): | rom
	dd if=/dev/zero bs=1024 count=128 of=$@

$(PROM): $(ELF) | rom
	$(NGOBJCOPY) -O binary -S -R .comment --reverse-bytes=2 $< $@

$(ZROM): | rom
	./zoom-rom.py -o $@

rom:
	mkdir $@

$(ELF):	$(OBJS:%=%.o)
	$(NGGCC) -nostartfiles -T bios.ld $^ -o $(ELF)

%.o: %.S
	$(NGAS) -c $< -o $@

$(SOUND_DRIVER):
	$(MAKE) -C $(NULLSOUND)

install: $(BIOS)
	../install-sh -d $(DESTDIR)$(prefix)/share/ngdevkit && \
	../install-sh -t $(DESTDIR)$(prefix)/share/ngdevkit $<


clean:
	rm -f *.o *~ $(ELF) rom/*.*

.PHONY: install clean bios
